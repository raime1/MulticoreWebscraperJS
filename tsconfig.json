{
    "version": "2.4.2",
    "compilerOptions": {
      "lib": ["es5", "es6"],
      "target": "es6",
      "esModuleInterop": true,
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./build",
      "rootDir": "src/",
      "alwaysStrict": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "typeRoots": ["./node_modules/@types"]
    },
    "include": ["src", "node_modules/@types/**/*.d.ts"],
    "exclude": ["node_modules", "builds"]
  }
  